{% extends 'base.html.twig' %}

{% block title %}Détail de la session{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #calendar-holder { margin-top: 2rem; }
</style>

<div class="example-wrapper">

    <h1>{{ session }}</h1>
    <ul>
        <li><strong>Formation :</strong> {{ session.formation.nom }}</li>
        <li><strong>Salle :</strong> {{ session.salle }}</li>
        <li><strong>Date début :</strong> {{ session.dateDebut|date('d/m/Y H:i') }}</li>
        <li><strong>Date fin :</strong> {{ session.dateFin|date('d/m/Y H:i') }}</li>
        <li><strong>Participants minimum :</strong> {{ session.minParticipant }}</li>
    </ul>

    <a href="{{ path('app_home') }}">Retour</a>
</div>
{% endblock %}
