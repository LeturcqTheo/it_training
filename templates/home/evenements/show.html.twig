{% extends 'base.html.twig' %}

{% block title %}{{ evenement }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        {% include "sidebar/sidebar.html.twig" %}

        <main class="col-md-10 ms-sm-auto px-4 py-4">
            <h2 class="fw-bold mb-4">{{ evenement }}</h2>
            <ul class="nav nav-tabs my-3"></ul>

            <div class="mb-3">
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour</a>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="p-3 border rounded shadow-sm bg-light">
                        <h5 class="mb-3">Informations générales</h5>
                        <ul class="list-unstyled">
                            <li><strong>Nom :</strong> {{ evenement.nom }}</li>
                            <li><strong>Responsable :</strong> {{ evenement.responsable }}</li>
                            <li><strong>Salle :</strong> {{ evenement.salle }}</li>
                            <li><strong>Nombre de participants :</strong> {{ evenement.nbrParticipant }}</li>
                            <li><strong>Date début :</strong> {{ evenement.dateDebut|date('d/m/Y H:i') }}</li>
                            <li><strong>Date fin :</strong> {{ evenement.dateFin|date('d/m/Y H:i') }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}