{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #calendar-holder { margin-top: 2rem; }
</style>

<div class="example-wrapper">
    <a href="{{path('admin_formation_index')}} ">Panel EasyAdmin</a>
</div>

<div class="example-wrapper">
    <div id="calendar-holder"></div>

    <select id="salle-selector">
        <option value="">---</option>
        {% for salle in salles %}
            <option value="{{ salle.id }}">{{ salle.nom }}</option>
        {% endfor %}
    </select>

    <form id="create_event">
        <label for="nom_event">Nom:</label>
        <input id="nom_event" type="text">
        <label for="date_debut">DÃ©but:</label>
        <input id="date_debut" type="datetime-local">
        <label for="date_fin">Fin:</label>
        <input id="date_fin" type="datetime-local">
        <input type="submit">
    </form>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script src="{{ asset('js/calendar_show.js') }}"></script>
{% endblock %}