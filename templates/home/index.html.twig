{% extends 'base.html.twig' %}

{% block title %}Agenda partagé{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        {% include "sidebar/sidebar.html.twig" %}

        <!-- Main Content -->
        <main class="col-md-10 ms-sm-auto px-4 py-4">
            <h2 class="fw-bold">Agenda partagé</h2>
            <ul class="nav nav-tabs my-3"></ul>

            <!-- Calendar and Salle Selector Side by Side -->
            <div class="row my-4 justify-content-center">
                <div class="col-md-6">
                    <div id="calendar-holder"></div>
                </div>
                <div class="col-md-3 d-flex flex-column gap-3">
                    <label for="salle-selector" class="form-label fw-bold">Choisir une salle</label>
                    <select id="salle-selector" class="form-select mb-4">
                        <option value="">---</option>
                        {% for salle in salles %}
                            <option value="{{ salle.id }}">{{ salle.nom }}</option>
                        {% endfor %}
                    </select>

                    <!-- Action Links -->
                    <a href="{{ path('app_create_event') }}" class="btn btn-primary">Créer un événement</a>
                    <a href="{{ path('app_create_session') }}" class="btn btn-success">Créer une session</a>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script src="{{ asset('js/calendar.js') }}"></script>
{% endblock %}
